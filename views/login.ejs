    <% if (message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
    <% } %>
    <form action='/login' method = 'POST'>
        <label>E-mail:</label> <input class="form-control" type = 'text' name = 'email'/><br/>
        <label>Пароль:</label> <input class="form-control" type = 'password' name = 'password' /><br/>
        <input type="submit" class="btn btn-warning btn-lg" value='Вход'/>
    </form>

</div>

</body>
